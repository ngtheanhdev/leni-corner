---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SOCIAL_LINKS, CONTACT_INFO } from '../consts';
---

<!doctype html>
<html lang="vi">
	<head>
		<BaseHead
			title={`Liên hệ & Báo giá | ${SITE_TITLE}`}
			description="Liên hệ với Góc Len của Rici để đặt hàng hoặc báo giá sản phẩm móc len theo yêu cầu"
		/>
	</head>
	<body>
		<Header />
		<main>
			<section class="page-header">
				<h1>Liên hệ & Báo giá</h1>
				<p>Hãy để lại thông tin, tôi sẽ liên hệ lại với bạn sớm nhất!</p>
			</section>

			<div class="contact-layout">
				<div class="contact-info">
					<h2>Thông tin liên hệ</h2>

					<div class="info-list">
						{SOCIAL_LINKS.phone && (
							<div class="info-item">
								<div class="info-icon">
									<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
										<path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56a.977.977 0 0 0-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/>
									</svg>
								</div>
								<div class="info-content">
									<h4>Điện thoại</h4>
									<a href={`tel:${SOCIAL_LINKS.phone}`}>{SOCIAL_LINKS.phone}</a>
								</div>
							</div>
						)}

						{SOCIAL_LINKS.email && (
							<div class="info-item">
								<div class="info-icon">
									<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
										<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
									</svg>
								</div>
								<div class="info-content">
									<h4>Email</h4>
									<a href={`mailto:${SOCIAL_LINKS.email}`}>{SOCIAL_LINKS.email}</a>
								</div>
							</div>
						)}

						{SOCIAL_LINKS.zalo && (
							<div class="info-item">
								<div class="info-icon">
									<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
										<path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 17.703c-.192.192-.448.297-.72.297H6.826c-.272 0-.528-.105-.72-.297a1.017 1.017 0 0 1-.297-.72V7.017c0-.272.105-.528.297-.72.192-.192.448-.297.72-.297h10.348c.272 0 .528.105.72.297.192.192.297.448.297.72v9.966c0 .272-.105.528-.297.72z"/>
									</svg>
								</div>
								<div class="info-content">
									<h4>Zalo</h4>
									<a href={SOCIAL_LINKS.zalo} target="_blank" rel="noopener noreferrer">Chat Zalo</a>
								</div>
							</div>
						)}

						{SOCIAL_LINKS.facebook && (
							<div class="info-item">
								<div class="info-icon">
									<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
										<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
									</svg>
								</div>
								<div class="info-content">
									<h4>Facebook</h4>
									<a href={SOCIAL_LINKS.facebook} target="_blank" rel="noopener noreferrer">Fanpage</a>
								</div>
							</div>
						)}

						{SOCIAL_LINKS.instagram && (
							<div class="info-item">
								<div class="info-icon">
									<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
										<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
									</svg>
								</div>
								<div class="info-content">
									<h4>Instagram</h4>
									<a href={SOCIAL_LINKS.instagram} target="_blank" rel="noopener noreferrer">@goclen.rici</a>
								</div>
							</div>
						)}

						{CONTACT_INFO.workingHours && (
							<div class="info-item">
								<div class="info-icon">
									<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
										<path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
									</svg>
								</div>
								<div class="info-content">
									<h4>Giờ làm việc</h4>
									<span>{CONTACT_INFO.workingHours}</span>
								</div>
							</div>
						)}
					</div>

					<div class="pricing-note">
						<h3>Lưu ý về báo giá</h3>
						<ul>
							<li>Giá sản phẩm phụ thuộc vào kích thước, độ phức tạp và số lượng</li>
							<li>Thời gian hoàn thành từ 3-7 ngày tùy sản phẩm</li>
							<li>Đặt cọc 50% khi xác nhận đơn hàng</li>
							<li>Miễn phí ship nội thành cho đơn từ 500k</li>
						</ul>
					</div>
				</div>

				<div class="contact-form-wrapper">
					<h2>Gửi yêu cầu báo giá</h2>
					<form id="contact-form" class="contact-form">
						<div class="form-group">
							<label for="name">Họ tên *</label>
							<input type="text" id="name" name="name" required placeholder="Nhập họ tên của bạn" />
						</div>

						<div class="form-row">
							<div class="form-group">
								<label for="phone">Số điện thoại *</label>
								<input type="tel" id="phone" name="phone" required placeholder="0912 345 678" />
							</div>
							<div class="form-group">
								<label for="email">Email</label>
								<input type="email" id="email" name="email" placeholder="email@example.com" />
							</div>
						</div>

						<div class="form-group">
							<label for="product">Sản phẩm quan tâm</label>
							<input type="text" id="product" name="product" placeholder="VD: Thú bông gấu, móc khóa..." />
						</div>

						<div class="form-group">
							<label for="message">Nội dung chi tiết *</label>
							<textarea id="message" name="message" required placeholder="Mô tả chi tiết sản phẩm bạn muốn đặt: kích thước, màu sắc, số lượng..."></textarea>
						</div>

						<button type="submit" class="btn btn-primary submit-btn">
							<span class="btn-text">Gửi yêu cầu</span>
							<span class="btn-loading" style="display: none;">Đang gửi...</span>
						</button>

						<div id="form-message" class="form-message" style="display: none;"></div>
					</form>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.page-header {
		text-align: center;
		padding: 3rem 0;
		margin-bottom: 2rem;
	}

	.page-header h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
		color: rgb(var(--black));
	}

	.page-header p {
		color: rgb(var(--gray));
		font-size: 1.1rem;
	}

	.contact-layout {
		display: grid;
		grid-template-columns: 1fr 1.2fr;
		gap: 3rem;
	}

	.contact-info h2,
	.contact-form-wrapper h2 {
		font-size: 1.5rem;
		margin-bottom: 1.5rem;
		color: rgb(var(--black));
	}

	.info-list {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
		margin-bottom: 2rem;
	}

	.info-item {
		display: flex;
		gap: 1rem;
		align-items: flex-start;
	}

	.info-icon {
		width: 48px;
		height: 48px;
		background: var(--primary-light);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--primary-dark);
		flex-shrink: 0;
	}

	.info-content h4 {
		font-size: 0.9rem;
		color: rgb(var(--gray));
		margin: 0 0 0.25rem;
		font-weight: 500;
	}

	.info-content a,
	.info-content span {
		font-size: 1rem;
		color: rgb(var(--black));
		text-decoration: none;
		font-weight: 600;
	}

	.info-content a:hover {
		color: var(--primary-dark);
	}

	.pricing-note {
		background: var(--primary-light);
		padding: 1.5rem;
		border-radius: var(--radius-lg);
	}

	.pricing-note h3 {
		font-size: 1.1rem;
		margin-bottom: 1rem;
		color: rgb(var(--black));
	}

	.pricing-note ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.pricing-note li {
		padding: 0.5rem 0;
		padding-left: 1.5rem;
		position: relative;
		color: rgb(var(--gray-dark));
		font-size: 0.95rem;
	}

	.pricing-note li::before {
		content: '✓';
		position: absolute;
		left: 0;
		color: var(--primary-dark);
		font-weight: bold;
	}

	.contact-form-wrapper {
		background: var(--bg-card);
		padding: 2rem;
		border-radius: var(--radius-xl);
		box-shadow: var(--box-shadow);
	}

	.contact-form {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.form-row {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
	}

	.form-group label {
		font-weight: 600;
		font-size: 0.95rem;
		color: rgb(var(--gray-dark));
	}

	.form-group input,
	.form-group textarea {
		width: 100%;
	}

	.submit-btn {
		margin-top: 0.5rem;
		width: 100%;
		padding: 1rem;
		font-size: 1.1rem;
	}

	.form-message {
		padding: 1rem;
		border-radius: var(--radius-sm);
		text-align: center;
		font-weight: 500;
	}

	.form-message.success {
		background: #d4edda;
		color: #155724;
	}

	.form-message.error {
		background: #f8d7da;
		color: #721c24;
	}

	@media (max-width: 768px) {
		.page-header h1 {
			font-size: 2rem;
		}

		.contact-layout {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.form-row {
			grid-template-columns: 1fr;
		}

		.contact-form-wrapper {
			padding: 1.5rem;
		}
	}
</style>

<script>
	// Google Apps Script Web App URL - Bạn cần thay thế bằng URL của mình
	// Xem hướng dẫn tạo tại: https://developers.google.com/apps-script/guides/web
	const GOOGLE_SCRIPT_URL = ''; // Thay bằng URL Google Apps Script của bạn

	const form = document.getElementById('contact-form') as HTMLFormElement;
	const formMessage = document.getElementById('form-message') as HTMLDivElement;
	const btnText = document.querySelector('.btn-text') as HTMLSpanElement;
	const btnLoading = document.querySelector('.btn-loading') as HTMLSpanElement;
	const submitBtn = document.querySelector('.submit-btn') as HTMLButtonElement;

	form?.addEventListener('submit', async (e) => {
		e.preventDefault();

		// Kiểm tra URL đã được cấu hình chưa
		if (!GOOGLE_SCRIPT_URL) {
			formMessage.textContent = 'Cảm ơn bạn đã quan tâm! Vui lòng liên hệ trực tiếp qua Zalo hoặc điện thoại.';
			formMessage.className = 'form-message success';
			formMessage.style.display = 'block';
			form.reset();
			return;
		}

		// Show loading state
		btnText.style.display = 'none';
		btnLoading.style.display = 'inline';
		submitBtn.disabled = true;

		const formData = new FormData(form);
		const data = {
			name: formData.get('name'),
			phone: formData.get('phone'),
			email: formData.get('email') || '',
			product: formData.get('product') || '',
			message: formData.get('message'),
			timestamp: new Date().toISOString(),
		};

		try {
			const response = await fetch(GOOGLE_SCRIPT_URL, {
				method: 'POST',
				mode: 'no-cors',
				headers: {
					'Content-Type': 'application/json',
				},
				body: JSON.stringify(data),
			});

			// Vì mode là no-cors, chúng ta không thể đọc response
			// Giả định thành công nếu không có lỗi
			formMessage.textContent = 'Cảm ơn bạn! Yêu cầu đã được gửi thành công. Tôi sẽ liên hệ lại sớm nhất!';
			formMessage.className = 'form-message success';
			form.reset();
		} catch (error) {
			formMessage.textContent = 'Có lỗi xảy ra. Vui lòng thử lại hoặc liên hệ trực tiếp qua Zalo/điện thoại.';
			formMessage.className = 'form-message error';
		}

		formMessage.style.display = 'block';
		btnText.style.display = 'inline';
		btnLoading.style.display = 'none';
		submitBtn.disabled = false;

		// Hide message after 5 seconds
		setTimeout(() => {
			formMessage.style.display = 'none';
		}, 5000);
	});
</script>

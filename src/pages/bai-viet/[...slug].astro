---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: { post },
	}));
}

const { post } = Astro.props;
const { Content } = await render(post);

// Lấy bài viết liên quan
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
	.filter(p => p.id !== post.id)
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 3);
---

<!doctype html>
<html lang="vi">
	<head>
		<BaseHead
			title={`${post.data.title} | ${SITE_TITLE}`}
			description={post.data.description}
			image={post.data.heroImage}
		/>
	</head>
	<body>
		<Header />
		<main>
			<nav class="breadcrumb">
				<a href="/">Trang chủ</a>
				<span>/</span>
				<a href="/bai-viet">Bài viết</a>
				<span>/</span>
				<span>{post.data.title}</span>
			</nav>

			<article class="blog-post">
				<header class="post-header">
					<h1>{post.data.title}</h1>
					<div class="post-meta">
						<FormattedDate date={post.data.pubDate} />
						{post.data.updatedDate && (
							<span class="updated">
								(Cập nhật: <FormattedDate date={post.data.updatedDate} />)
							</span>
						)}
					</div>
				</header>

				{post.data.heroImage && (
					<div class="hero-image">
						<img src={post.data.heroImage} alt={post.data.title} />
					</div>
				)}

				<div class="post-content prose">
					<Content />
				</div>
			</article>

			{relatedPosts.length > 0 && (
				<section class="related-posts">
					<h2>Bài viết khác</h2>
					<div class="related-grid">
						{relatedPosts.map((p) => (
							<a href={`/bai-viet/${p.id}`} class="related-item">
								{p.data.heroImage && (
									<img src={p.data.heroImage} alt={p.data.title} />
								)}
								<div class="related-info">
									<h3>{p.data.title}</h3>
									<FormattedDate date={p.data.pubDate} />
								</div>
							</a>
						))}
					</div>
				</section>
			)}
		</main>
		<Footer />
	</body>
</html>

<style>
	.breadcrumb {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 2rem;
		font-size: 0.9rem;
		color: rgb(var(--gray));
	}

	.breadcrumb a {
		color: rgb(var(--gray));
		text-decoration: none;
	}

	.breadcrumb a:hover {
		color: var(--primary-dark);
	}

	.blog-post {
		max-width: 800px;
		margin: 0 auto;
	}

	.post-header {
		text-align: center;
		margin-bottom: 2rem;
	}

	.post-header h1 {
		font-size: 2.5rem;
		line-height: 1.3;
		margin-bottom: 1rem;
	}

	.post-meta {
		color: rgb(var(--gray));
		font-size: 0.95rem;
	}

	.updated {
		margin-left: 0.5rem;
		font-style: italic;
	}

	.hero-image {
		margin-bottom: 2rem;
		border-radius: var(--radius-lg);
		overflow: hidden;
	}

	.hero-image img {
		width: 100%;
		max-height: 500px;
		object-fit: cover;
	}

	.post-content {
		line-height: 1.8;
		font-size: 1.1rem;
	}

	.post-content :global(h2) {
		margin-top: 2rem;
		margin-bottom: 1rem;
	}

	.post-content :global(h3) {
		margin-top: 1.5rem;
		margin-bottom: 0.75rem;
	}

	.post-content :global(p) {
		margin-bottom: 1.5rem;
	}

	.post-content :global(img) {
		margin: 2rem auto;
		display: block;
	}

	.related-posts {
		max-width: 800px;
		margin: 4rem auto 0;
		padding-top: 2rem;
		border-top: 2px solid var(--primary-light);
	}

	.related-posts h2 {
		text-align: center;
		margin-bottom: 2rem;
	}

	.related-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 1.5rem;
	}

	.related-item {
		text-decoration: none;
		color: inherit;
		background: var(--bg-card);
		border-radius: var(--radius-lg);
		overflow: hidden;
		box-shadow: var(--box-shadow);
		transition: all 0.3s ease;
	}

	.related-item:hover {
		transform: translateY(-4px);
		box-shadow: var(--box-shadow-hover);
	}

	.related-item img {
		width: 100%;
		aspect-ratio: 16/9;
		object-fit: cover;
		border-radius: 0;
	}

	.related-info {
		padding: 1rem;
	}

	.related-info h3 {
		font-size: 1rem;
		margin: 0 0 0.5rem;
		line-height: 1.4;
	}

	.related-info :global(time) {
		font-size: 0.85rem;
		color: rgb(var(--gray));
	}

	@media (max-width: 768px) {
		.post-header h1 {
			font-size: 1.75rem;
		}

		.related-grid {
			grid-template-columns: 1fr;
		}
	}
</style>

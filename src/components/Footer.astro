---
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';

const today = new Date();

const footerLinks = [
	{ href: '/', label: 'Trang chủ' },
	{ href: '/san-pham', label: 'Sản phẩm' },
	{ href: '/bai-viet', label: 'Bài viết' },
	{ href: '/gioi-thieu', label: 'Giới thiệu' },
	{ href: '/lien-he', label: 'Liên hệ' },
];
---

<footer>
	<div class="footer-container">
		<div class="footer-main">
			<div class="footer-brand">
				<a href="/" class="footer-logo">
					<img src="/favicon.svg" alt={SITE_TITLE} class="footer-logo-img" />
					<span>{SITE_TITLE}</span>
				</a>
				<p class="footer-desc">
					Nơi trưng bày những sản phẩm móc len handmade dễ thương, được tạo nên từ tình yêu và sự tỉ mỉ.
				</p>
			</div>

			<div class="footer-links">
				<h4>Liên kết</h4>
				<ul>
					{footerLinks.map((link) => (
						<li><a href={link.href}>{link.label}</a></li>
					))}
				</ul>
			</div>

			<div class="footer-contact">
				<h4>Kết nối</h4>
				<div class="social-links">
					{SOCIAL_LINKS.facebook && (
						<a href={SOCIAL_LINKS.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
							<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
								<path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
							</svg>
						</a>
					)}
					{SOCIAL_LINKS.instagram && (
						<a href={SOCIAL_LINKS.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
							<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
								<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
							</svg>
						</a>
					)}
					{SOCIAL_LINKS.zalo && (
						<a href={SOCIAL_LINKS.zalo} target="_blank" rel="noopener noreferrer" aria-label="Zalo">
							<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
								<path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.894 17.703c-.192.192-.448.297-.72.297H6.826c-.272 0-.528-.105-.72-.297a1.017 1.017 0 0 1-.297-.72V7.017c0-.272.105-.528.297-.72.192-.192.448-.297.72-.297h10.348c.272 0 .528.105.72.297.192.192.297.448.297.72v9.966c0 .272-.105.528-.297.72z"/>
							</svg>
						</a>
					)}
					{SOCIAL_LINKS.email && (
						<a href={`mailto:${SOCIAL_LINKS.email}`} aria-label="Email">
							<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
								<path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
							</svg>
						</a>
					)}
					{SOCIAL_LINKS.phone && (
						<a href={`tel:${SOCIAL_LINKS.phone}`} aria-label="Điện thoại">
							<svg viewBox="0 0 24 24" width="24" height="24" fill="currentColor">
								<path d="M20.01 15.38c-1.23 0-2.42-.2-3.53-.56a.977.977 0 0 0-1.01.24l-1.57 1.97c-2.83-1.35-5.48-3.9-6.89-6.83l1.95-1.66c.27-.28.35-.67.24-1.02-.37-1.11-.56-2.3-.56-3.53 0-.54-.45-.99-.99-.99H4.19C3.65 3 3 3.24 3 3.99 3 13.28 10.73 21 20.01 21c.71 0 .99-.63.99-1.18v-3.45c0-.54-.45-.99-.99-.99z"/>
							</svg>
						</a>
					)}
				</div>
			</div>
		</div>

		<div class="footer-bottom">
			<p>&copy; {today.getFullYear()} {SITE_TITLE}. Tất cả quyền được bảo lưu.</p>
		</div>
	</div>
</footer>

<style>
	footer {
		background: var(--pink-gradient);
		padding: 3rem 1.5rem 2rem;
		margin-top: 4rem;
	}

	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.footer-main {
		display: grid;
		grid-template-columns: 2fr 1fr 1fr;
		gap: 3rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid rgba(248, 165, 194, 0.3);
	}

	.footer-brand {
		max-width: 300px;
	}

	.footer-logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: rgb(45, 45, 45);
		font-weight: 700;
		font-size: 1.1rem;
		margin-bottom: 1rem;
	}

	.footer-logo:hover {
		color: var(--primary-dark);
	}

	.footer-logo-img {
		height: 36px;
		width: auto;
		border-radius: 8px;
	}

	.footer-desc {
		color: rgb(100, 100, 100);
		font-size: 0.95rem;
		line-height: 1.6;
		margin: 0;
	}

	.footer-links h4,
	.footer-contact h4 {
		color: rgb(45, 45, 45);
		font-size: 1rem;
		margin-bottom: 1rem;
	}

	.footer-links ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.footer-links li {
		margin-bottom: 0.5rem;
	}

	.footer-links a {
		color: rgb(100, 100, 100);
		text-decoration: none;
		font-size: 0.95rem;
		transition: color 0.3s ease;
	}

	.footer-links a:hover {
		color: var(--primary-dark);
	}

	.social-links {
		display: flex;
		gap: 1rem;
	}

	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		background: white;
		border-radius: 50%;
		color: var(--primary-dark);
		transition: all 0.3s ease;
		box-shadow: 0 2px 8px rgba(248, 165, 194, 0.2);
	}

	.social-links a:hover {
		background: var(--primary);
		color: white;
		transform: translateY(-2px);
	}

	.footer-bottom {
		text-align: center;
		padding-top: 1.5rem;
	}

	.footer-bottom p {
		color: rgb(100, 100, 100);
		font-size: 0.9rem;
		margin: 0;
	}

	@media (max-width: 768px) {
		.footer-main {
			grid-template-columns: 1fr;
			gap: 2rem;
			text-align: center;
		}

		.footer-brand {
			max-width: 100%;
		}

		.footer-logo {
			justify-content: center;
		}

		.social-links {
			justify-content: center;
		}
	}
</style>

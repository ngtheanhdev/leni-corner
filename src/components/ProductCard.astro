---
interface Props {
	name: string;
	description: string;
	priceRange: string;
	image: string;
	slug: string;
	tags?: string[];
	available?: boolean;
}

const { name, description, priceRange, image, slug, tags = [], available = true } = Astro.props;
---

<a href={`/san-pham/${slug}`} class="product-card">
	<div class="product-image">
		<img src={image} alt={name} loading="lazy" />
		{!available && <span class="sold-out">Hết hàng</span>}
	</div>
	<div class="product-info">
		<h3 class="product-name">{name}</h3>
		<p class="product-desc">{description}</p>
		{tags.length > 0 && (
			<div class="product-tags">
				{tags.slice(0, 3).map((tag) => (
					<span class="tag">{tag}</span>
				))}
			</div>
		)}
		<p class="product-price">{priceRange}</p>
	</div>
</a>

<style>
	.product-card {
		display: block;
		background: var(--bg-card);
		border-radius: var(--radius-lg);
		overflow: hidden;
		box-shadow: var(--box-shadow);
		transition: all 0.3s ease;
		text-decoration: none;
		color: inherit;
	}

	.product-card:hover {
		transform: translateY(-6px);
		box-shadow: var(--box-shadow-hover);
	}

	.product-image {
		position: relative;
		aspect-ratio: 1;
		overflow: hidden;
	}

	.product-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
		border-radius: 0;
	}

	.product-card:hover .product-image img {
		transform: scale(1.05);
	}

	.sold-out {
		position: absolute;
		top: 1rem;
		right: 1rem;
		background: rgba(0, 0, 0, 0.7);
		color: white;
		padding: 0.25rem 0.75rem;
		border-radius: 20px;
		font-size: 0.8rem;
		font-weight: 600;
	}

	.product-info {
		padding: 1.25rem;
	}

	.product-name {
		font-size: 1.1rem;
		font-weight: 600;
		color: rgb(var(--black));
		margin: 0 0 0.5rem 0;
		line-height: 1.3;
	}

	.product-desc {
		font-size: 0.9rem;
		color: rgb(var(--gray));
		margin: 0 0 0.75rem 0;
		line-height: 1.5;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.product-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 0.75rem;
	}

	.product-tags .tag {
		font-size: 0.75rem;
		padding: 0.2rem 0.6rem;
	}

	.product-price {
		font-size: 1rem;
		font-weight: 700;
		color: var(--primary-dark);
		margin: 0;
	}
</style>
